    {
      "name": "Debug TS via ts-node-esm",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--loader", "ts-node/esm"
      ],
      "args": ["src/index.ts"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug with ts-node-dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}